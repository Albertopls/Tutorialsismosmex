<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".Fragments.FragmentEstoyBien">

    <ImageView
        android:id="@+id/fragment_estoy_bien_img_logo"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <ImageView
        android:id="@+id/fragment_estoy_bien_img_telefono"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/alerta_movil"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


        <ImageView
            android:id="@+id/fragment_estoy_bien_img_flecha_izq"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/ic_left_arrow"
            android:background="@drawable/shape_btn_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_estoy_bien_img_telefono"
            android:layout_gravity="start"
            />

        <TextView
            android:id="@+id/fragment_estoy_bien_txt_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="@string/activar_estoy_bien"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/fragment_estoy_bien_img_telefono"
            app:layout_constraintStart_toEndOf="@id/fragment_estoy_bien_img_flecha_izq"
            app:layout_constraintEnd_toStartOf="@id/fragment_estoy_bien_img_flecha_der"/>

        <ImageView
            android:id="@+id/fragment_estoy_bien_img_flecha_der"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:src="@mipmap/ic_right_arrow"
            android:background="@drawable/shape_btn_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_estoy_bien_img_telefono"
            />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/podras_notificar_a_tus_contactos_que_te_encuentras_en_buen_estado_presionando_tres_veces_el_bot_n_de_encendido_sin_necesidad_de_tener_la_aplicaci_n_abierta"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_estoy_bien_img_flecha_der"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_btn_white"/>
        <Button
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_btn_white"/>
        <Button
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_btn_red"/>
        <Button
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_btn_white"/>

        <Button
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_btn_white"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>